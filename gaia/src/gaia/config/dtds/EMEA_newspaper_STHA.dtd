<!--
============================================================================
	File Naming Conventions referenced in this DTD
                     
XML File Name: pubcode-yyyy-mmdd

i.e.           pubcode-1902-0625

Image File Name: pubcode-yyyy-mmdd-imagepagenumber-supplemenimagepagenumber

i.e.           pubcode-1902-0625-0191-0000
                     
============================================================================
-->
<!--
============================================================================

	Notes on X-Y positional coordinates referenced in this DTD
                     
X-Y coordinate pairs are structured in the format  x_top-left ,y_top-left, x_bottom-right, y_bottom-right
with comma separators

  i.e. 50,150,750,350
============================================================================

-->
<!-- Header elements classifying the content as newspaper or periodical.
This will be useful to maintain a single DTD for variation in content.
-->
<!ELEMENT GALENP (Newspaper | Periodical)>
<!ELEMENT Newspaper (issue)>
<!ELEMENT Periodical (issue)>
<!--  Issue -->
<!ELEMENT issue (metadatainfo, id, is?, da, pf, dw?, ip, copyright?, imdim, page+)>
<!ELEMENT metadatainfo (newspaperID)>
<!--    
============================================================================
                 	Metadata Info elements         
============================================================================
                                                                                                          
-->
<!-- Publication code -->
<!ELEMENT newspaperID (#PCDATA)>
<!--

============================================================================
		        Newspaper Issue elements         
============================================================================
                                                                                                              
-->
<!-- Identifier -->
<!-- Note; XML file name. Unique value format  (pubcode-yyyy-mmdd) -->
<!ELEMENT id (#PCDATA)>
<!-- Source Issue Number -->
<!ELEMENT is (#PCDATA)>
<!-- Publication Date -->
<!-- e.g. month dd, yyyy - February 02, 1889 -->
<!ELEMENT da (#PCDATA)>
<!-- Fixed Publication Date -->
<!-- Note; logically generated from date e.g. yyyymmdd -->
<!ELEMENT pf (#PCDATA)>
<!-- Day of the week -->
<!ELEMENT dw (#PCDATA)>
<!-- Page Count -->
<!-- Note;  Number of images present in the issue  -->
<!ELEMENT ip (#PCDATA)>
<!-- Copyright Holder and Year
       This element holds the name of the publication
       e.g. for FTDA - The Financial Times Limited. All rights reserved
-->
<!ELEMENT copyright (#PCDATA)>
<!-- Page Dimension -->
<!-- Note; Programatically generated -->
<!ELEMENT imdim (#PCDATA)>
<!--    
============================================================================
                     	     Page elements         
============================================================================
                                                                                                          
-->
<!--  page -->
<!ELEMENT page (pageid, pa?, supptitle?, article*)>
<!--  pageid -->
<!ELEMENT pageid (#PCDATA)>
<!ATTLIST pageid
	colorimage (Yes | No) #REQUIRED
	pageType ( Body | Cover ) #REQUIRED
	isPartOf ( Special | Supplement | Standard ) #REQUIRED	
>
<!--Source page number of the Page -->
<!ELEMENT pa (#PCDATA)>
<!-- Supplement Title -->
<!ELEMENT supptitle (#PCDATA)>
<!--    
============================================================================
  		             Article elements         
============================================================================
                                                                                                                
-->
<!ELEMENT article (id, ocr?, sc, pi+, ci+, pc, ti, ta*, detailed_au*, altSource*, ct, il*, text)>
<!ATTLIST article
	type (article | TOC) #REQUIRED
>
<!-- OCR Confidence Level -->
<!ELEMENT ocr (#PCDATA)>
<!ATTLIST ocr
	relevant (yes | no) "yes"
>
<!-- Starting column: a string to label the column where article starts -->
<!ELEMENT sc (#PCDATA)>
<!-- Page Image -->
<!ELEMENT pi (#PCDATA)>
<!ATTLIST pi
	pgref CDATA #REQUIRED
>
<!-- Clipped Article Image -->
<!ELEMENT ci (#PCDATA)>
<!ATTLIST ci
	pgref CDATA #REQUIRED
	clip CDATA #REQUIRED
>
<!-- Page Count: total number of pages containing sections of the article -->
<!ELEMENT pc (#PCDATA)>
<!-- Article Title -->
<!ELEMENT ti (#PCDATA)>
<!-- Article Subtitle -->
<!ELEMENT ta (#PCDATA)>
<!-- Detailed Author -->
<!ELEMENT detailed_au (prefix?, first?, middle?, last, suffix?)>
<!-- prefix of the author-->
<!ELEMENT prefix (#PCDATA)>
<!-- first name of the author-->
<!ELEMENT first (#PCDATA)>
<!-- Middle name of the author-->
<!ELEMENT middle (#PCDATA)>
<!-- Last name of the author-->
<!ELEMENT last (#PCDATA)>
<!-- Suffix of the author-->
<!ELEMENT suffix (#PCDATA)>
<!-- Source Paper -->
<!ELEMENT altSource (#PCDATA)>
<!-- Category: uses predefined list of article categories as per specification-->
<!ELEMENT ct (#PCDATA)>
<!-- Illustration Values should be any of the following category "Cartoon | Map | Drawing-Painting | Photograph | Graph | Table | Chart | Engraving | Fine-Art-Reproduction | Illustration"  -->
<!ELEMENT il (#PCDATA)>
<!ATTLIST il
	type (Cartoons | Map | Drawing-Painting | Photograph | Graph | Table) #REQUIRED
	colorimage (Yes | No) #REQUIRED
	pos CDATA #REQUIRED
	orientation (p | l) #REQUIRED
	clipref CDATA #REQUIRED
	clipimgpresent (Yes | No) #REQUIRED
	clipimgfile CDATA #IMPLIED
	dbid CDATA #IMPLIED
>
<!-- Article Text -->
<!ELEMENT text (text.preamble?, text.title?, text.cr+)>
<!-- Article Preamble (any text preceding title) -->
<!ELEMENT text.preamble (pg, p)>
<!-- Article Title -->
<!ELEMENT text.title (pg, p)>
<!-- Generic Clip Rectangle -->
<!ELEMENT text.cr (pg, p*)>
<!-- Position Guide: any article zone scanned as a separate OCR unit -->
<!ELEMENT pg EMPTY>
<!ATTLIST pg
	pgref CDATA #REQUIRED
	clipref CDATA #REQUIRED
	pos CDATA #REQUIRED
>
<!-- Paragraph -->
<!ELEMENT p (wd)*>
<!ATTLIST p
	type (none | tocitem) "none"
	pgref CDATA #IMPLIED
>
<!-- Word -->
<!ELEMENT wd (#PCDATA)>
<!ATTLIST wd
	pos CDATA #REQUIRED
>
<!-- 
============================================================================
     		             End of the DTD      
============================================================================
 -->
